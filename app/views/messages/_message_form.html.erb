<%= form_for message, remote: true, authenticity_token: true do |f|%>
  <%= f.label :your_message %>:
  <%= f.text_field :content, class: "form-control", data: {input: "message"}%>

  <%= f.hidden_field :chatroom_id, value: chatroom.id %>
  <%= f.submit "send", class: "btn btn-primary", style: "left: 0", data: {send: "message"} %>
<%end%>